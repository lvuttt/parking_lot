#!/usr/bin/env bash
# Add script to:


# * Install dependencies
apt-get install ruby-full
gem install bundler
bundle install


# * Build/Compile
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )"
go test ./...
go build -o parking_lot $DIR/../.


# * Run Test Suit to validate
$DIR/run_functional_tests


# After this is run, bin/parking_lot
# should Just Work.